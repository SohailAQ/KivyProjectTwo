MDBoxLayout:
    MDScreen:

        MDCard:
            size_hint: None, None
            size: dp(300), dp(400)
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            orientation: "vertical"
            padding: 25
            spacing: 25

            MDLabel:
                id: welcome_label
                text: "WELCOME"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDTextFieldRound:
                id: username
                hint_text: 'Username'
                icon_right: 'account'
                size_hint_x: None
                width: dp(200)
                font_size: 18
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextFieldRound:
                id: password
                hint_text: 'Password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: dp(200)
                font_size: 18
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                password: True

            MDFillRoundFlatButton:
                text: 'Login'
                size_hint: 1, None
                font_size: 12
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: app.login()

            MDFillRoundFlatButton:
                text: 'Cancel'
                size_hint: 1, None
                font_size: 12
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: app.clear()

            Widget:
                size_hint_y: None
                height: dp(10)